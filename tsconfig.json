{
    "compilerOptions": {
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "module": "es2015",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "outDir": "build",
      "noImplicitAny": true,
      "pretty": true,
      "removeComments": false,
      "stripInternal": true,
      "sourceMap": false,
      "target": "es5"
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ]
}
